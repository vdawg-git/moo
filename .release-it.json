{
	"$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
	"git": {
		"commitMessage": "chore: release v${version}",
		"tag": true,
		"tagAnnotation": "v${version}"
	},
	"github": {
		"release": true,
		"autoGenerate": true,
		"assets": ["dist/*"],
		"releaseName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": "./scripts/prepare-release.sh"
	}
}
